{
  "name": "eiriksm/build-drupal-wasm",
  "description": "Attempt to build an existing site into a deployable WASM version",
  "license": "GPL-2.0-or-later",
  "type": "composer-plugin",
  "require": {
    "composer-plugin-api": "^2.0",
    "webflo/drupal-finder": "^1.3",
    "php-tuf/composer-stager": "^2-beta"
  },
  "require-dev": {
    "composer/composer": "^2.0",
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.12",
    "slevomat/coding-standard": "^8.15"
  },
  "scripts": {
    "test": [
      "@composer phpcs",
      "phpstan",
      "phpunit"
    ],
    "phpcs": "vendor/bin/phpcs -p"
  },
  "autoload": {
    "psr-4": {
      "eiriksm\\BuildDrupalWasm\\": "src/"
    }
  },
  "extra": {
    "class": "eiriksm\\BuildDrupalWasm\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
